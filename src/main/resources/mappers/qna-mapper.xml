<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="qna">

	<insert id="insertQna" parameterType="QnaVo">
	 <!-- 타이틀 넣기 -->
		INSERT INTO 
			TB_QNA(QNA_QUESTION, QNA_ANSWER) 
		VALUES
			(#{qnaQuestion}, #{qnaAnswer})
	</insert>
	
	<update id="updateQna" parameterType="QnaVo">
		UPDATE TB_QNA
			SET QNA_ANSWER=#{qnaAnswer}
			WHERE QNA_NO=#{qnaNo}
	</update>
	
		<select id="selectUserByQnaQuestion" parameterType="string" resultType="QnaVo">
	<!-- <select id="selectUserByQnaWriter" parameterType="string" resultType="QnaVo"> -->	
		SELECT 
			* 
		FROM 
			TB_QNA
		WHERE 
			QNA_QUESTION = #{qnaQuestion}
	</select>
</mapper>